{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "lib": ["es2015", "dom"],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "ยง/functions/*": [
        "./functions/*"
      ]
    },
"types": ["vue"]
  },
  "include": ["src/**/*.ts","src/**/*.vue"],
  "exclude": ["sanity/node_modules"]
}
